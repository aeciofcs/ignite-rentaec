{
    "openapi": "3.0.0",
    "info":{
        "title": "Documentação - RENTAEC",
        "description": "API para alugueis de carros",
        "version": "1.0.0",
        "contact":{
            "email": "aeciofcs@gmail.com"
        }
    },
    "paths": {
        "/categories": {
            "post": {
                "tags": ["Categoria"],
                "summary": "Criar uma categoria",
                "description": "Criar uma nova categoria",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": { "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "SUV",
                                    "description": "VEÍCULO UTILITÁRIO ESPORTIVO"
                                }
                            }

                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Criado"
                    },
                    "500": {
                        "description": "Categoria já existe."
                    }
                }
            },
            "get": {
                "tags": ["Categoria"],
                "summay": "Lista todas as Categorias.",
                "description": "Listagem de todas as categorias cadastradas.",
                "responses": {
                    "200": {
                        "description": "Sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "name": {
                                                "type": "string"
                                            },
                                            "description": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },

        "/categories/import":{
            "post": {
                "tags": ["Categoria"],
                "summary": "Upload de Categoria.",
                "description": "Realiza upload de um arquivo contendo categorias para ser importado dentro do APP.",
                "requestBody":{
                    "content":{
                        "multipart/form-data": {
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "file":{
                                        "type": "string",
                                        "format": "binary"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "201":{
                        "description": "Criado."
                    }
                }
            }
        },

        "/specifications": {
            "post": {
                "tags":["Especificação"],
                "summary":"Cria um Especificação",
                "description":"Criar uma nova Especificação",
                "requestBody":{
                    "content":{
                        "application/json":{
                            "schema":{
                                "$ref": "#/definitions/Specification"
                            }
                        }
                    }
                },
                "responses":{
                    "201":{
                        "description": "Criado."
                    },
                    "500":{
                        "description":"Specification already exists."
                    }
                }
            }
        },

        "/users": {
            "post":{
                "tags":["Usuários"],
                "summary": "Cria um Usuário",
                "description": "Criação de usuário para realizar login na aplicação",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/User"                                
                            },
                            "example": {
                                "name": "Aecio",
                                "username": "aeciofcs",
                                "email": "aeciofcs@gmail.com",
                                "password": "***",
                                "driver_license": "1234567",
                                "isAdmin": false
                            }
                        }
                    }
                },
                "responses": {
                    "201":{
                        "description": "Criado."
                    }
                }
            }
        }
    },

    "definitions": {
        "Specification": {
            "type":"object",
            "properties":{
                "name": {
                    "type": "string"
                },
                "description": {
                    "type":"string"
                }
            }
        },
        "User": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"                    
                },
                "username": {
                    "type": "string"
                },
                "email": {
                    "type": "string",
                    "format": "email"
                },
                "password": {
                    "type": "string",
                    "format": "password"
                },
                "driver_license": {
                    "type": "string"
                },
                "isAdmin": {
                    "type": "boolean"
                }
            }
        }
    }
}